@{
    ViewData["Title"] = "Movie List";
}

@model List<MovieForm>

<div class="table-responsive">
    <table class="table table-bordered table-striped table-hover">
        <thead class="fw-bold">
            <tr>
                <td>Title</td>
                <td>Year</td>
                <td>Director</td>
                <td>Rating</td>
                <td>Genre</td>
                <td>Edited</td>
                <td>CopiedToPlex</td>
                <td>Lent To</td>
                <td>Notes</td>
                <td>Actions</td>
            </tr>
        </thead>
        @foreach (var movie in Model)
        {
            <tbody>
                <tr>
                    <td>@movie.Title</td>
                    <td>@movie.Year</td>
                    <td>@movie.Director</td>
                    <td>@movie.Rating</td>
                    <td>@movie.Categories?.CategoryName</td>
                    <td>@movie.Edited</td>
                    <td>@movie.CopiedToPlex</td>
                    <td>@movie.LentTo</td>
                    <td>@movie.Notes</td>
                    <td>
                        <a class="btn btn-outline-primary" asp-controller="Home" asp-action="Edit" asp-route-id="@movie.MovieId">Edit</a>
                        <a class="btn btn-outline-danger" asp-controller="Home" asp-action="Delete" asp-route-id="@movie.MovieId">Delete</a>
                    </td>
                </tr>
            </tbody>
        }
    </table>
</div>